@page
@model RestaurantReviewer.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home";
}

<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Ratings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var restaurant in Model.Restaurants)
        {
            <tr>
                <td>
                <a asp-page="./Restaurant" asp-route-id="@restaurant.Id"> @restaurant.Name </a> 
                </td>
                <td>
                    <div>
                        <div class="RatingName">
                            Rating: 
                        </div>
                        <div class="RatingScore">
                            @restaurant.TotalRating
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
